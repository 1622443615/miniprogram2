<!--components/t-swiper/t-swiper.wxml-->
<view class="swiperCard">
<view class="swiperTitle">
  <text>各种标题</text>
  <t-link size="small" content="查看更多" hover />
</view>
<swiper bindchange="onSwiperChange" indicator-dots="true" indicator-active-color="#fff">
  <block wx:for="{{imageList}}" wx:key="index">
    <swiper-item>
      <image src="{{item.url}}" />
    </swiper-item>
  </block>
  
</swiper>
